.body {
  background: rgba(0, 0, 0, 0.5);
  height: 100vh;
}

.header {
  background: rgba(0, 0, 0, 0.5);
  height: 200px;
}

.player {
  border: solid 1px #fff;
  height: 600px;
  display: none;
}

.block {
  display: block;
}

.categories {
  border: none;
  border-bottom: solid 10px #fff;
  height: 120px;
  margin: 5% auto;
  overflow: hidden;
}

.catbutt {
  font-size: 100px;
  cursor: pointer;
}

.catlist {
  display: grid;
  grid-template-columns: 30% 30% 30%;
  grid-template-rows: 50% 50%;
  grid-gap: 5px;
  overflow: hidden;
  margin: 5% 0 0 0;
}

.open {
  height: 350px;
  animation: open 1s;
}

.cat {
  font-size: 50px;
  cursor: pointer;
  height: 55px;
}

.movies {
  border: solid 1px #fff;
  width: 100%;
  margin: 30px 0 0 0;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: 1fr;
  grid-auto-flow: row;
  grid-gap: 20px;
}

.film {
  border: solid 1px #fff;
  width: 100%;
  height: 500px;
}

.film_title
{
  font-size: 50px;
}

.film_description
{
  font-size: 40px;
}

.syno {
  width: 100%;
  height: 35%;
  animation: syno 1s;
}

@keyframes syno {
  0% {
    width: 31%;
    height: 35%;
  }

  100% {
    width: 100%;
    height: 35%;
  }
}

